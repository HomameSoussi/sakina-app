{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/screens/*": ["./src/screens/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/store/*": ["./src/store/*"],
      "@/types/*": ["./src/types/*"],
      "@sakina/ui": ["../../packages/ui/src"],
      "@sakina/ui/*": ["../../packages/ui/src/*"],
      "@sakina/i18n": ["../../packages/i18n/src"],
      "@sakina/i18n/*": ["../../packages/i18n/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
